@page
@model StardekkBreweryApp.Pages.Breweries.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Brewery</h2>

<br />

<div style="border: 1px solid #bbb9b9; border-radius: 10px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="Brewery.Id" />
        <div class="row" style="padding:30px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Brewery.Title"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Brewery.Title" class="form-control" />
                    </div>
                    <span asp-validation-for="Brewery.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Brewery.Logo"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Brewery.Logo" class="form-control" />
                    </div>
                    <span asp-validation-for="Brewery.Logo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Brewery.Address"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Brewery.Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Brewery.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Brewery.ContactCell"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Brewery.ContactCell" class="form-control" />
                    </div>
                    <span asp-validation-for="Brewery.ContactCell" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Brewery.NbOfActivities"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Brewery.NbOfActivities" class="form-control" />
                    </div>
                    <span asp-validation-for="Brewery.NbOfActivities" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary btn-sm" />
                <a asp-page="Index" class="btn btn-success btn-sm">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

